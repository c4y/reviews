{
    "name": "c4y/reviews",
    "type": "contao-bundle",
    "description": "Contao Bundle f√ºr Kundenbewertungen",
    "keywords": ["contao", "reviews", "bewertungen"],
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Lohoff",
            "homepage": "https://github.com/c4y"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.2",
        "contao/core-bundle": "4.8.*",
        "symfony/framework-bundle": "^4",
        "codefog/contao-haste": "^4.23",
        "terminal42/notification_center": "^1.5"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.12",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message-factory": "^1.0.2",
        "phpunit/phpunit": "^5.7.26",
        "symfony/phpunit-bridge": "^3.2"
    },
    "extra": {
        "contao-manager-plugin": "C4Y\\Reviews\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "C4Y\\Reviews\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "C4Y\\Reviews\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/c4y/contao-reviews/issues",
        "source": "https://github.com/c4y/contao-reviews"
    }
}
